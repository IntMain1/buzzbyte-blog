{
    "openapi": "3.0.0",
    "info": {
        "title": "BuzzByte API",
        "description": "RESTful API for BuzzByte Blog Application - A modern blog with ephemeral posts that auto-delete after 24 hours",
        "contact": {
            "name": "Omar Tarek",
            "email": "api@buzzbyte.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Development Server"
        }
